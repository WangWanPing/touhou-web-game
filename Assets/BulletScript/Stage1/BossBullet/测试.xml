<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">
<bulletml type="vertical" xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

  <action label="top">
    <repeat>
      <!--重复次数-->
      <times>9999</times>
      <action>
        <repeat>
          <!--每次单方向发射的弹幕数-->
          <times>1</times>
          <actionRef label="TheFront"></actionRef>
        </repeat>
        <wait>10</wait>
      </action>
    </repeat>
  </action>

  <!--一组花瓣方向行为-->
  <action label="TheFront">
    <wait>3</wait>
    <repeat>
      <!--重复次数-->
      <times>8</times>
      <action>
        <fireRef label="FrontBullet"></fireRef>
        <fireRef label="LeftBullet1"></fireRef>
        <fireRef label="LeftBullet2"></fireRef>
        <fireRef label="LeftBullet3"></fireRef>
        <fireRef label="RightBullet1"></fireRef>
        <fireRef label="RightBullet2"></fireRef>
        <fireRef label="RightBullet3"></fireRef>
      </action>
    </repeat>
  </action>

  <!--每片花瓣最前面的子弹-->
  <fire label="FrontBullet">
    <bullet label="Bullet1_0">
      <direction type="sequence">45</direction>
      <speed>1</speed>
      <radius>1.5</radius>
    </bullet>
  </fire>

  <!--左1子弹-->
  <fire label="LeftBullet1">
    <bullet>

      <direction type="sequence">45</direction>
      <offSet>5</offSet>
      <speed>0.9</speed>
      <radius>1.3</radius>
    </bullet>
  </fire>
  <!--左2子弹-->
  <fire label="LeftBullet2">
    <direction type="sequence">45</direction>
    <offSet>10</offSet>
    <speed>0.8</speed>
    <radius>1.1</radius>
    <bullet/>
  </fire>
  <!--左3子弹-->
  <fire label="LeftBullet3">
    <direction type="sequence">45</direction>
    <offSet>15</offSet>
    <speed>0.7</speed>
    <radius>0.9</radius>
    <bullet/>
  </fire>

  <!--右1子弹-->
  <fire label="RightBullet1">
    <bullet>
      <direction type="sequence">45</direction>
      <offSet>-5</offSet>
      <speed>0.9</speed>
      <radius>1.3</radius>
    </bullet>
  </fire>
  <!--右2子弹-->
  <fire label="RightBullet2">
    <direction type="sequence">45</direction>
    <offSet>-10</offSet>
    <speed>0.8</speed>
    <radius>1.1</radius>
    <bullet/>
  </fire>
  <!--右3子弹-->
  <fire label="RightBullet3">
    <direction type="sequence">45</direction>
    <offSet>-15</offSet>
    <speed>0.7</speed>
    <radius>0.9</radius>
    <bullet/>
  </fire>
</bulletml>